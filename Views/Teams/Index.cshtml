@model IEnumerable<SkijumpingTeams.Models.Team>

@{
    ViewData["Title"] = "Teams";
}

<h1>List of Teams</h1>

<p>
    <a asp-action="Create">Create new Team</a>
</p>
<table class="table table-striped table-dark table-hover">
    <thead>
        <tr>
            <th>
                Flag:
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@Url.Content(item.PhotoLink)" alt="" height="120" width="180">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nation)
                </td>
                <td>
                    <a type="button" class="btn btn-primary" asp-action="DetailsJumpers" asp-route-id="@item.ID">Jumpers in team</a>
                    <a type="button" class="btn btn-primary" asp-action="DetailsCoaches" asp-route-id="@item.ID">Coaches in team</a>
                    <a type="button" class="btn btn-success" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                    <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
