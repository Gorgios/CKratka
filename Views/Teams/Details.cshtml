@model SkijumpingTeams.ViewModels.TeamViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Team</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.Nation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.Nation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.PhotoLink)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.PhotoLink)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.PhotoLink)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.PhotoLink)
        </dd>
    </dl>
    <div class="list-of-jumpers">
        <div class="board">
            @foreach (var item in Model.Jumpers)
            {
                @Html.Partial("_TeamJumpersPartial", item);
            }
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
