@model SkijumpingTeams.Models.Jumper

<div class="content">
        <img src="@Url.Content(Model.PhotoLink)" alt="" height="400" width="300">
        <h3> Jumper info</h3>
        <p>
            <span>Name:</span>
            @Html.DisplayFor(modelItem => Model.FirstName)
            <span>@Html.DisplayFor(modelItem => Model.LastName)</span><br />
            <span>Birthday:</span>
            @Html.DisplayFor(modelItem => Model.DateOfBirth)<br />
            <span>Full details: </span>
            @Html.ActionLink("Details", "Details", "Jumpers", new { id = Model.ID }, null)
        </p>
</div>